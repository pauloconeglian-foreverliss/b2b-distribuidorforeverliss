  "shelf#home": {
    "blocks": ["product-summary.shelf"]
  },

  "list-context.image-list#fullbanner": {
    "children": ["slider-layout#fullbanner-images"],
    "props": {
      "height": 720,
      "images": [
        {
          "image": "assets/fullbanner-distribuidor-forever-liss-03.jpg",
          "mobileImage": "assets/fullbanner-distribuidor-forever-liss-03.jpg",
          "link": {
            "url": "/seja-um-distribuidor",
            "title": "Veja como ser um distribuidor"
          }
        }
      ]
    }
  },

  "slider-layout#fullbanner-images": {
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "infinite": true,
      "showNavigationArrows": "desktopOnly",
      "blockClass": "carousel"
    }
  },

