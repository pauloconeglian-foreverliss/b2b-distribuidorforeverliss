{
  "store.home": {
    "children": [
      "modal-trigger#aviso"
    ],
    "blocks": [
      "list-context.image-list#fullbanner",
      /*"__fold__.experimentalLazyAssets",*/
      /*"flex-layout.row#deals",*/
      "slider-layout#deals",
      /*"rich-text#shelf-title",*/
      /*"flex-layout.row#shelf",*/
      "rich-text#vantagens-title",
      "flex-layout.row#vantagens",
      "newsletter"
    ]
  },

  /* Modal Home */
  "modal-trigger#aviso": {
    "children": [
      "modal-layout#aviso"
    ],
    "props": {
      "trigger": "load"
    }
  },

  "modal-layout#aviso": {
    "children": [
      "modal-header",
      "rich-text#modal-content",
      "overlay-trigger"
    ],
    "props": {
      "blockClass": "modalAvisoHome"
    }
  },

  "modal-header": {
    "children": [
      "rich-text#modal-title"
    ]
  },

  "rich-text#modal-title": {
    "props": {
      "text": "##### Bem-vindo(a) à loja virtual para revendedores Forever Liss"
    }
  },

  "rich-text#modal-content": {
    "props": {
      "text": "De qual estado você é?",      
      "blockClass": "modalTextContent"
    }
  },

  "overlay-trigger": {
    "children": [
      "rich-text#question",
      "overlay-layout"
    ],
    "props": {
      "blockClass": "dropdownState"
    }
  },
  
  "rich-text#question": {
    "props": {
      "text": "**Selecione**",
      "blockClass": "stateOptions"
    }
  },
  
  "overlay-layout": {
    "props": {
      "placement": "bottom"
    },
    "children": [
      "modal-actions.close#ba",
      "modal-actions.close#ce",
      "modal-actions.close#es",
      "modal-actions.close#mg",
      "modal-actions.close#sc",
      "modal-actions.close#se",
      "modal-actions.close#sp",
      "rich-text#item"
    ]
  },  

  "modal-actions.close#ba": {
    "props": {
      "label": "Bahia",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#ce": {
    "props": {
      "label": "Ceará",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#es": {
    "props": {
      "label": "Espírito Santo",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#mg": {
    "props": {
      "label": "Minas Gerais",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#sc": {
    "props": {
      "label": "Santa Catarina",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#se": {
    "props": {
      "label": "Sergipe",
      "blockClass": "stateItems"
    }
  },

  "modal-actions.close#sp": {
    "props": {
      "label": "São Paulo",
      "blockClass": "stateItems"
    }
  },
  
  "rich-text#item": {
    "props": {
      "text": "[Outros](http://pedidos.distribuidorforeverliss.com.br/seja-distribuidor)",
      "blockClass": "stateItems"
    }
  },

